<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springbasic.mappers.memberMapper">
	<select id="curDate" resultType="string">
		select now()
	</select>
	
	<select id="viewMemberByUserId" resultType="com.springbasic.vo.Member">
		select * from member where userId = #{userId}
	</select>
	
	<insert id="addMember">
		insert into member(userId, userPw, userEmail) values(#{userId}, sha1(md5(#{userPw})), #{userEmail})
	</insert>
	
	<select id="viewAllMember" resultType="com.springbasic.vo.Member">
		select * from member
	</select>
</mapper>
