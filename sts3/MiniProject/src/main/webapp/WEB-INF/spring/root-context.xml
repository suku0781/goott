	<!-- 데이터베이스 connection -->
	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="url" value="jdbc:mysql://localhost:3306/shk?useSSL=false&amp;serverTimezone=Asia/Seoul&amp;characterEncoding=UTF-8"></property>
		<property name="username" value="root"></property>
		<property name="password" value="1234"></property>
		<property name="driverClassName" value="com.mysql.cj.jdbc.Driver"></property>
	</bean>
	
	<bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource"></property>
	</bean>
	
	<!-- 	transaction을 annotation방식으로 처리함 -->
	<tx:annotation-driven/>
	
	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource"></property>
		<!-- 마이바티스 환경설정파일이 있는 곳 -->
		<property name="configLocation" value="classpath:/mybatis-config.xml"></property>
		<!-- mapper파일이 위치해있는곳 -->
		<property name="mapperLocations" value="classpath:/mappers/**/*Mapper.xml"></property>
	</bean>

	<!-- sqlSessionFactory 객체 설정 -->
	<bean id="sqlSession" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg ref="sqlSessionFactory"></constructor-arg>
	</bean>
	
	<!-- AOP설정을 위한 Proxy객체 생성 -->
	<aop:aspectj-autoproxy></aop:aspectj-autoproxy>
	
	
	
	
	<!-- 아래의 패키지를 조사해서(Scan) 패키지 안의 객체를 관리 -->
	<context:component-scan base-package="com.miniproject.persistence" />
	<context:component-scan base-package="com.miniproject.service" />
	
	

</beans>


